@{
	ViewData["Title"] = "Add Classe";
}
@model AttendanceJournalLibrary.Class
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

</style>

<div class="background-box">
	<div class="text-center">
		<div id="title-inline"></div>
		<h2>Добавление пары</h2>
		<div id="title-inline"></div>
		<form method="post" asp-action="AddClasse" asp-controller="Classes" enctype="multipart/form-data">
			<label asp-for="Theme"></label>
			<p>
				<input type="text" asp-for="Theme" maxlength="20" placeholder="Название" />
				<span asp-validation-for="Theme" class="position-box-error"></span>
			</p>

			@Html.LabelFor(model => model.SubjectID);
			<p>@Html.DropDownListFor(model => model.SubjectID, ViewBag.Subjects as SelectList)</p>
			<p><button type="submit">Добавить</button></p>
		</form>

		<form asp-action="Main" asp-controller="Classes">
			<p><button class="button-revers">Главная</button></p>
		</form>
		<p>@ViewData["Message"]</p>
		<div id="title-inline-small"></div>
		<p>
			<form asp-controller="Subjects" asp-action="Add" method="GET">
				<button>Добавить</button>
			</form>
		</p>
	</div>
</div>

